<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.vibhav2k17.android.vibhav2k17.registation.registrationPOC">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/texture"
            android:scaleType="fitXY"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/reg"
            android:id="@+id/registrationdone"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/registrationdone"
            android:id="@+id/TeamNAme">

            <AutoCompleteTextView
                android:id="@+id/TeamNAmeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/valueField2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:hint="TeamName*"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Participent1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/TeamNAme">

            <EditText
                android:id="@+id/valueField2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Participation 1*"
                android:layout_below="@+id/textInputLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rollno"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/Participent1">

            <EditText
                android:id="@+id/rollnodata1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Admission No*"
                android:layout_below="@+id/textInputLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneno"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/rollno">
            <EditText
                android:id="@+id/phonenodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mobile(WhatsApp no)*"
                android:inputType="phone"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Participent2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/phoneno">

            <EditText
                android:id="@+id/valueField3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Participiant 2*"
                android:layout_below="@+id/textInputLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rollno2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/Participent2">

            <EditText
                android:id="@+id/rollnodata2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Admission No.*"
                android:layout_below="@+id/textInputLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneno2"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/rollno2">
            <EditText
                android:id="@+id/phoneno2data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mobile(WhatsApp no)*"
                android:inputType="phone"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Participent3"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/phoneno2">

            <EditText
                android:id="@+id/valueField4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Participiant 3"
                android:layout_below="@+id/textInputLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rollno3"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/Participent3">

            <EditText
                android:id="@+id/rollnodata3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Admission No"
                android:layout_below="@+id/textInputLayout"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phoneno3"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_below="@+id/rollno3">
            <EditText
                android:id="@+id/phoneno3data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mobile(WhatsApp No)"
                android:inputType="phone"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:singleLine="true"
                />
        </android.support.design.widget.TextInputLayout>







        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@color/common_plus_signin_btn_text_dark_default"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="274dp"
            android:layout_below="@+id/phoneno3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp" />

    </RelativeLayout>


</ScrollView>
